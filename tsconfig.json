{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2018", "dom"],
    "experimentalDecorators": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@app/*": ["src/ts/*"]
    }
  },
  "exclude": ["./node_modules/*"],
  "include": ["src/ts/"]
}
